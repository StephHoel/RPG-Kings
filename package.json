{
  "name": "kings-academy",
  "private": true,
  "version": "0.1.8",
  "type": "module",
  "homepage": "https://stephhoel.github.io/RPG-Kings/",
  "scripts": {
    "dev": "next dev",
    "clear": "rm -rf .next/ out/ && echo ✅ Limpeza concluída.",
    "build": "npm run clear && next build && echo ✅ Build concluído com sucesso.",
    "start": "npx serve@latest out",
    "test:unit": "npx jest tests/unit --runInBand",
    "test:e2e": "start-test :3000 'jest --runInBand' && echo ✅ Testes E2E concluídos com sucesso.",
    "test:e2e:ci": "npm run build && start-test :3000 'jest --runInBand' && echo ✅ CI: build e E2E concluídos com sucesso.",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx && echo ✅ Lint: executado com sucesso.",
    "lint:fix": "eslint ./src --ext .js,.jsx,.ts,.tsx --fix && echo ✅ Lint: correções aplicadas (se houver).",
    "tsc": "npx tsc && echo ✅ TypeScript: verificação concluída com sucesso.",
    "format:fix": "prettier --write \"./{src,test}/**/*.{js,jsx,ts,tsx,json,md,css,scss,html}\" && echo ✅ Formatação aplicada.",
    "format": "prettier --check \"./**/*.{js,jsx,ts,tsx,json,md,css,scss,html}\"",
    "issues:create": "node ./scripts/create-issues-wrapper.mjs"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.5",
    "dexie": "^4.2.1",
    "nanoid": "^5.1.6",
    "next": "^16.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.65.0",
    "sonner": "^2.0.7",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.16",
    "@types/css-modules": "^1.0.5",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.23",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.38.0",
    "eslint-config-next": "^16.0.0",
    "eslint-plugin-react": "^7.37.5",
    "fake-indexeddb": "^3.1.7",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "prettier": "^2.8.8",
    "serve": "^14.2.5",
    "start-server-and-test": "^2.1.3",
    "tailwindcss": "^4.1.16",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  }
}
